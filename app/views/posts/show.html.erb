<div>
  <p>Title:</p>
  <%= @post.title %>
</div>

<div>
  <p>Body:</p>
  <%= @post.body %>
</div>

<div>
  <%= @post.created_at %>
</div>

<div>
  <%= @post.updated_at %>
</div>

<h3>Comments</h3>

<%= turbo_stream_from :comments %>
<div id="comments">
  <%= render @post.comments.order(created_at: :asc) %>
</div>

<div id="new_comment">
  <%= render 'comments/form', comment: @post.comments.new %>
</div>

<ul>
  <li><%= link_to "Go to Posts", posts_path %></li>
</ul>
